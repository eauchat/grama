
<div class="mtp-event_card">

  {# FEATURE IMAGE #}
  {% include "partials/post_card_image.html.twig" with { post: post } %}

  {# CONTENT #}
  <div class="mtp-event_card--content">

    {# TITLE #}
    <a class="event-title" href="{{ post.url }}">{{ post.header.title }}</a>
    {# DATE AND PLACE #}
    <div class="event-date">{{ post.header.date|date(system.pages.dateformat.short) }} Â· {{ post.header.place }}</div>
    {# CONTENT #}
    <div class="event-content">
      <p>{{ post.content|raw|striptags|safe_truncate(500)|raw  }}</p>
    </div>
    {# READ MORE #}
    <a class="event-read_more" href="{{ post.url }}">{{ "EVENT_CARD.READ_MORE"|t }}</a>

  </div>

</div>
